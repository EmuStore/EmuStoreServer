{
	"name": "emu-store-server",
	"version": "1.0.0",
	"description": "",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jeremyd4500/EmuStoreServer.git"
	},
	"bugs": {
		"url": "https://github.com/jeremyd4500/EmuStoreServer/issues"
	},
	"homepage": "https://github.com/jeremyd4500/EmuStoreServer#readme",
	"author": "Jeremy Wilson",
	"license": "ISC",
	"keywords": [
		"steam deck",
		"steam-deck",
		"steamdeck",
		"emulator",
		"linux",
		"server",
		"retro"
	],
	"scripts": {
		"build": "tsc",
		"cleanup": "npx kill-port 3080",
		"dev": "yarn cleanup && yarn cross-env NODE_ENV=development nodemon",
		"format": "prettier --write \"**/**.{ts,js,json}\"",
		"generate:env": "yarn ts-node ./src/scripts/generateEnv.ts",
		"generate:token": "yarn ts-node ./src/scripts/generateToken.ts",
		"lint": "eslint . --ext .ts",
		"lint:fix": "eslint . --ext .ts --fix",
		"prebuild": "rimraf build",
		"prepare": "husky install",
		"prisma:update": "yarn add prisma@latest @prisma/client@latest"
	},
	"dependencies": {
		"@prisma/client": "^4.4.0",
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.14",
		"@types/keymirror": "^0.1.1",
		"@types/morgan": "^1.9.3",
		"@types/node": "^18.11.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-rate-limit": "^6.6.0",
		"helmet": "^6.0.0",
		"keymirror": "^0.1.1",
		"morgan": "^1.10.0",
		"prisma": "^4.4.0",
		"type-fest": "^3.1.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.40.1",
		"@typescript-eslint/parser": "^5.40.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.25.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"nodemon": "^2.0.20",
		"prettier": "^2.7.1",
		"pretty-quick": "^3.1.3",
		"rimraf": "^3.0.2",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4"
	},
	"nodemonConfig": {
		"exec": "ts-node src/index.ts",
		"watch": [
			"src"
		],
		"ext": "ts"
	}
}
